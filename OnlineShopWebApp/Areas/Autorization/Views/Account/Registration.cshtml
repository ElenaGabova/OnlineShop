@using OnlineShopWebApp.Areas.Autorization.Models
@model RegisterViewModel

<form method="post">
    <div class="card  text-center grayCard"> 
       <div class="card-body">
          <input type="hidden"  asp-for="ReturnUrl"   value="@Model?.ReturnUrl"/>
           <div class="row" >
              <div class="col-md-12">
                   <br />
                    <div class="validation" asp-validation-summary="ModelOnly" style="color:darkred;font-weight:bold"></div>
                    <br />
                    <div class="form-group">
                       <label asp-for="FirstName"  class="control-label boldText">Имя:</label>
                       <input type="text" asp-for="FirstName"  class="form-control"/>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <br />
                     <div class="form-group">
                       <label asp-for="SecondName"  class="control-label boldText">Фамилия:</label>
                       <input type="text" asp-for="SecondName"  class="form-control"/>
                        <span asp-validation-for="SecondName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                       <label asp-for="UserName"  class="control-label boldText">Логин:</label>
                       <input type="text" asp-for="UserName"  class="form-control"/>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                       <label asp-for="PhoneNumber"  class="control-label boldText">Телефон:</label>
                       <input type="text" asp-for="PhoneNumber"  class="form-control"/>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                      <br />
                    <div class="form-group">
                       <label asp-for="Password"  class="control-label boldText">Введите пароль:</label>
                       <input type="password" asp-for="Password"  class="form-control"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                       <label asp-for="SecondPassword"  class="control-label boldText">Повторите пароль:</label>
                       <input type="password" asp-for="SecondPassword"  class="form-control"/>
                        <span asp-validation-for="SecondPassword" class="text-danger"></span>
                    </div>
                   <br />
                   <div class="Buttons d-flex justify-content-center" >          
                         <button type="submit" style="width: 15rem" class="btn btn-warning btn-block" asp-area="Autorization"  asp-controller="Account" asp-action="Registration">Зарегистрироваться</button>
                   </div>
                   <br />
                 </div>
               
            </div>
           </div>
      </div>
</form>