@using OnlineShopWebApp.Areas.Autorization.Models
@model List<RegisterViewModel>
<div class="row" >
    @await Html.PartialAsync("AdminLeftMenu")

    <div class="col-9">
        <h3 class="orangetext">Пользователи</h3>
    <br />
    <td><a asp-area="Autorization" asp-controller="Account" asp-action="Registration">Добавить пользователя</a></td>

    <br />
    <br />
    <div class="card-7 sm-7"> 
           <table class="table">
                <thead class="darkslategrayText">
                    <tr>
                        <th>Имя</th>
                        <th>Фамилия</th>
                        <th>Имя</th>
                        <th>Телефон</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.UserName</td> 
                            <td>@item.FirstName</td>
                            <td>@item.SecondName</td> 
                            <td>@item.PhoneNumber</td>
                            <td><a asp-area="Admin" asp-controller="User" asp-action="Details" asp-route-userName=@item.UserName >Подробнее</a></td>
                       </tr>
                   }
                </tbody>
            </table>  
            <br />
            <br /> 
          </div>
        </div>
    </div>
   </div>
</div>