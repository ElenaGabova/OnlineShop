@using OnlineShopWebApp.Areas.Autorization.Models
@model RegisterViewModel
@{
    ViewData["Title"] = "Информация о пользователе ";
}
<h3>Информация о пользователе @Model.UserName</h3>
<form method="post"> 
    <div class="card  text-center grayCard"> 
         <div class="card-body">
            <div class="row" >
                <div class="col-md-12"> 
                    <br /> 
                    <input type="hidden" value ="@Model?.Password" name="Password">
                    <input type="hidden" value ="@Model?.SecondPassword" name="SecondPassword">
                    <div>
                       <label asp-for="FirstName"  class="control-label boldText">Имя:</label>
                       <input type="text" asp-for="FirstName"  class="form-control" value ="@Model?.FirstName"/>
                       <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <br />
                    <div>
                       <label asp-for="SecondName"  class="control-label boldText">Фамилия:</label>
                       <input type="text" asp-for="SecondName"  class="form-control" value ="@Model?.SecondName"/>
                        <span asp-validation-for="SecondName" class="text-danger"></span>
                    </div>
                     <br />
                    <div>
                       <label asp-for="UserName" for="inputDescription boldText">Email(логин):</label>
                       <input type="text" asp-for="UserName"  class="form-control" value ="@Model?.UserName"/>  
                       <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                     <br />
                     <div>
                       <label asp-for="PhoneNumber" for="inputDescription boldText">Номер телефона:</label>
                       <input type="text" asp-for="PhoneNumber"  class="form-control" value ="@Model?.PhoneNumber"/>  
                       <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
             <br /> 
             <br />
              <br />
             <button type="submit" class="btn btn-warning btn-block" style="width:16rem;margin-left:auto; margin-right:auto" asp-area="Admin" asp-controller="User">Сохранить изменения</button>
         </div>
       </div>
        <br />
    <div/>
 </form>